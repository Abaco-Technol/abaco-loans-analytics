{
  // --- General Performance: Exclude folders from all tools ---
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.next/**": true,
    "**/build/**": true,
    "**/.gradle/**": true,
    "**/__pycache__/**": true,
    "**/.venv/**": true,
    "**/venv/**": true,
    "**/dist/**": true,
    "**/out/**": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/build": true,
    "**/.gradle": true,
    "**/.venv": true,
    "**/venv": true
  },

  // --- Deno: Only enable for the web app ---
  "deno.enable": true,
  "deno.enablePaths": [
    "apps/web"
  ],

  // --- Git: ensure VS Code uses a portable binary path ---
  // "git.path": "/opt/homebrew/bin/git", // Removed to use system default Git
  // --- ESLint: Specify the working directory ---
  "eslint.workingDirectories": [
    "./apps/web"
  ],


  // --- Java: Point to the correct source folders ---
  "java.project.sourcePaths": [
    "src/main/java",
    "src/test/java"
  ],
  // --- Disable Java and Gradle Language Servers ---
  "java.enabled": false,
  "gradle.enabled": false,

  // --- SonarLint: Exclude folders from analysis ---
  "sonarlint.ls.exclusions": [
    "**/node_modules/**",
    "**/.next/**",
    "**/build/**",
    "**/.gradle/**",
    "**/dist/**",
    "**/.venv/**",
    "**/venv/**"
  ],
  "java.configuration.updateBuildConfiguration": "interactive",
  "java.server.launchMode": "Standard",
  "sonarlint.connectedMode.project": {
    "connectionId": "abaco-technol",
    "projectKey": "abaco-loans-analytics"
  },
  "github.copilot.chat.codesearch.enabled": true,
  "chat.edits2.enabled": true,
  "chat.mcp.assisted.nuget.enabled": true,
  "chatgpt.openOnStartup": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "zencoder.mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest",
        "--isolated",
        "--headless",
        "--browser",
        "firefox",
        "--user-agent",
        "\"Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/125.0.6422.112 Safari/537.36\""
      ]
    }
  },
  "zencoder.shellTool.commandConfirmationPolicy": "neverAsk"
}
